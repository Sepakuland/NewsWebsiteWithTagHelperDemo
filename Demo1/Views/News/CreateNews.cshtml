
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Demo.Core.Entities.News

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<div class="col-md-10 mx-auto py-4">
    <div class="card">
        <div class="card-header bg-success text-uppercase text-white">
            <h4>اضافه کردن اخبار </h4>
        </div>
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="createnews">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label">عنوان</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="CategoryId" class="control-label">کتگوری</label>
                            <input asp-for="CategoryId" class="form-control" />
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Summery" class="control-label">خلاصه</label>
                            <input asp-for="Summery" class="form-control" />
                            <span asp-validation-for="Summery" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="form-group">
                            <label asp-for="Text" class="control-label">متن</label>
                            <input asp-for="Text" class="form-control" />
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="custom-file">
                                <input name="images" class="custom-file-input" type="file" id="images">
                                <label class="custom-file-label" for="images">انتخاب عکس</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ثبت" class="btn btn-sm btn-primary rounded-0 text-uppercase" />
                        @*<a asp-action="Create" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>*@
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
